{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "@shared/*": ["app/shared/*"],
      "@sharedcomponents/*": ["app/shared/components/*"],
      "@services/*": ["app/shared/services/*"],
      "@modules/*": ["app/modules/*"],
      "@public/*": ["app/public/*"],
      "@environments/*": ["environments/*"]
    }
  }
}
